@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{ 
  <h2>No engineers have been added yet</h2>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<h4>@Html.ActionLink("Add a new engineer", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>