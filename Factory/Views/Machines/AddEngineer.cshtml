@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<h1>Add an engineer to this machine: @Html.DisplayFor(model => model.MachineName)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select an engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save"/>
}

<h4>@Html.ActionLink("Back to machines", "Index")</h4>