@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (Model.Count == 0)
{
  <h2>No machines have been added yet</h2>
}
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}

<h4>@Html.ActionLink("Add a new machine", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>
